{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",                // ✅ for vi, describe, expect, it
      "vite/client",                   // ✅ for import.meta.env
      "@testing-library/jest-dom"      // ✅ to support `toBeInTheDocument`
    ]
  },
  "include": ["src", "tests", "src/__tests__"]
}
